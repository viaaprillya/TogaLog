<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:textColor="@color/dark_green"
        tools:context=".TogaDetail">

        <TextView
            android:id="@+id/tv_item_nama_lokal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/dark_green"
            android:text="@string/halaman_awal"/>

        <TextView
            android:id="@+id/tv_item_nama_ilmiah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/dark_green"
            android:text="@string/halaman_awal"/>

        <LinearLayout
            android:id="@+id/foto_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/botanical"
                android:layout_width="210dp"
                android:layout_height="280dp"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/kenikir"
                android:layout_gravity="left"
                />

            <ImageView
                android:id="@+id/photo_real"
                android:layout_width="180dp"
                android:layout_height="280dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/kenikir_real"
                android:padding="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deskripsi"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/dark_green"
            android:justificationMode="inter_word"
            android:text="@string/halaman_awal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/khasiat"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:textSize="15sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_khasiat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/khasiat"
            android:textSize="15sp"
            android:justificationMode="inter_word"
            android:textColor="@color/dark_green"/>

    </LinearLayout>
</ScrollView>